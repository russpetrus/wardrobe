@model WardrobeApp.Models.Bottom

@{
    ViewBag.Title = Model.Name;
}

<div class="container">
    <div>
        <img class="img-thumbnail" src="@Url.Content("~/content/images/" + Model.Photo)" />
    </div>

    <div>
        <h2 class="red">Details: @Model.Name</h2>

        <a class="glyphicon-index-link" href="@Url.Action("Edit", new { id = Model.BottomID })">
            <i class="glyphicon glyphicon-pencil"></i>
            Edit
            <span class="sr-only">Edit</span>
        </a>
        <a class="glyphicon-index-link" href="@Url.Action("Index")">
            <i class="glyphicon glyphicon-th-list"></i>
            Back to List
            <span class="sr-only">Index</span>
        </a>
    </div>
    <hr />

    <div class="row">
        <div class="col-md-5">
            <img class="detail-photo" src="@Url.Content("~/content/images/" + Model.Photo)" />
        </div>
        <div class="col-md-7">
            <div class="row">
                <div class="col-sm-6">
                    <div class="red-box"></div>
                </div>
                <div class="col-sm-6">
                    <div class="tan-box"></div>
                </div>
                
                    <div class="col-sm-6">
                        <div class="gray-box"></div>
                    </div>
                    <div class="col-sm-6">
                        <div class="chalkboard-box"></div>
                   
                </div>
            </div>
        </div>
        

    </div>





