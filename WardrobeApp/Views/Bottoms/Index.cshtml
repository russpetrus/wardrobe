@model IEnumerable<WardrobeApp.Models.Bottom>

@{
    ViewBag.Title = "Bottoms";
}

<div class="container">

    <h2 class="red">All Bottoms</h2>


    <div>
        <a class="glyphicon-index-link " href="@Url.Action("Create", "Bottoms")">
            <i class="glyphicon glyphicon-plus"></i>
            New Bottom
        </a>
    </div>

    @*Replace EF with custom view*@

    <div class="row">
        @foreach (var item in Model)
        {

            <div class="col-md-4">

                <div class="index-infoholder">
                    <h3 class="index-name red">@Html.DisplayFor(modelItem => item.Name)</h3>

                    @*Render ActionLinks as glyphicons*@
                    <div class="icon-holder">

                        <a class="glyphicon-index-link" href="@Url.Action("Details", new { id = item.BottomID })">
                            <i class="glyphicon glyphicon-eye-open"></i>
                            <span class="sr-only">Details</span>
                        </a>

                        <a class="glyphicon-index-link" href="@Url.Action("Edit", new { id = item.BottomID })">
                            <i class="glyphicon glyphicon-pencil"></i>
                            <span class="sr-only">Edit</span>
                        </a>

                        <a class="glyphicon-index-link" href="@Url.Action("Delete", new { id = item.BottomID })">
                            <i class="glyphicon glyphicon-trash"></i>
                            <span class="sr-only">Delete</span>
                        </a>
                    </div>
                    <img class="index-photo" src="@Url.Content("~/content/images/" + item.Photo)" />

                </div>
            </div>
        }
    </div>
</div>





